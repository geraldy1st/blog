<div class="article-comments">
  <p class="article-comments-name">
    <strong>Posted by:</strong>
    <%= comment.commenter %>
  </p>
  <p class="article-comments-p">
    <%= comment.body %>
  </p>

  <% if user_signed_in? && current_user.id == @article.author_id %>
  <p>

    <%= link_to 'Delete', [comment.article, comment],
                 method: :delete,
                 data: { confirm: 'Are you sure?' } %>
  </p>
  <% end %>
</div>
